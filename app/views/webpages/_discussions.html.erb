<ul id="messageboard">
<% discussions = @webpage.discussions.all.sort_by { |d| d[:created_at] }.reverse  %>
<%discussions.each do |d|%>
<li>
  <div class="messageboard-padding">
    <div class="listingBox" id="<%=d.id%>">
      
        <h2><div class="plus"></div><div style="padding-left:15px;"> &nbsp;<%= d.title%></div></h2>
        <div class="profileBox">
          <%=useravatar(d.user)%>
        </div><!--profile box end-->
        <div class="msgContent">
          <h3><%=d.user.username%>  <div style="display: inline;" class="followlkclass" ><%=followlk(d)%></div><span class="timestamp">1 mins</span></h3>
          <p><%=d.content%></p>
          <p class="readMore"><a href="#" id="<%=d.id%>">&laquo; Reply</a></p>
        </div><!--msgContent end-->

        <ul class="discussion_ul" id="<%=d.id%>">
        <div class="commentform">
          <%=render :partial=>"comments/form", :locals => { :did => d.id }  %>
        </div>
        <%@comments = d.comments.all.sort_by { |c| c[:created_at] }.reverse%>
        <div class="commentlist" id="<%=d.id%>">
          <%=render @comments%>
        </div>
        </ul>
    <div class="fix"></div>
    </div><!-- listing end -->
    <div class="fix"></div>
  </div><!-- LI padding end -->
</li>

<%end%>
</ul><!--message board ul end-->




      
