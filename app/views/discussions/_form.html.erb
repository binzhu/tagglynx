<%= form_for(@discussion) do |f| %>
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
      <% @discussion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :webpage_id, :value => @webpage.id%>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Discussion %><br />
    <%= f.text_area :content, :size => "45x4" %>
  </div>

    <%= f.label :active %>
    <%= f.check_box :active %>
    <%= f.label :sticky %>
    <%= f.check_box :sticky %>

  <div class="actions">
    <%= f.submit "Start New Discussion" %>
  </div>
<% end %>
